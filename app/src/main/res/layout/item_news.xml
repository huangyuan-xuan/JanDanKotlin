<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/news_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/news_img"
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_blue_grey_600"
        android:text="这是标题"
        tools:text="这是标题" />
    <TextView
        android:layout_below="@id/news_title"
        android:textColor="@color/material_blue_grey_500"
        android:id="@+id/news_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/news_title"
        android:textColor="@color/material_blue_grey_500"
        android:id="@+id/news_time"
        android:layout_toRightOf="@id/news_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/news_title"
        android:layout_toLeftOf="@id/news_img"
        android:textColor="@color/material_blue_grey_500"
        android:id="@+id/news_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>